# Set shut down, restart and locking features
bindsym mod4+l mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l workspace $ws10, exec "terminator --title=tmp-terminal; sleep 0.2; bash $i3config/scripts/i3exit lock", mode "default"
    bindsym s exec "bash $i3config/scripts/i3exit suspend", mode "default"
    bindsym e exec "bash $i3config/scripts/i3exit logout", mode "default"
    bindsym h exec "bash $i3config/scripts/i3exit hibernate", mode "default"
    bindsym r exec "bash $i3config/scripts/i3exit reboot", mode "default"
    bindsym Shift+s exec "bash $i3config/scripts/i3exit shutdown", mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# window mode without mouse wheel
bindsym $mod+d mode "launcher"
mode "launcher" {
    # screen Scroll wheel up or down
    bindsym j exec xdotool click 5
    bindsym k exec xdotool click 4
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# brightness control modify your monitor name
# there is also a graphical tool called arandr:for setting monitors
# arandr can make a shell script for startup monitor layout display
set $output eDP-1
bindsym $mod+Ctrl+l mode "brightness"
mode "brightness" {
    # 1 2 3 4 5 6 7 8 9 means different value
    bindsym 1 exec xrandr --output $output --brightness 0.1
    bindsym 2 exec xrandr --output $output --brightness 0.2
    bindsym 3 exec xrandr --output $output --brightness 0.3
    bindsym 4 exec xrandr --output $output --brightness 0.4
    bindsym 5 exec xrandr --output $output --brightness 0.5
    bindsym 6 exec xrandr --output $output --brightness 0.6
    bindsym 7 exec xrandr --output $output --brightness 0.7
    bindsym 8 exec xrandr --output $output --brightness 0.8
    bindsym 9 exec xrandr --output $output --brightness 0.9
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


# Media player controls: https://github.com/acrisci/playerctl
bindsym $mod+m mode "media"
mode "media" {
    bindsym $mod+Up exec playerctl play
    bindsym $mod+Down exec playerctl pause
    bindsym $mod+Right exec playerctl next
    bindsym $mod+Left exec playerctl previous
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


